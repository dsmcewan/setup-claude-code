{
  "name": "@pleaseai/setup-claude-code",
  "type": "module",
  "version": "1.1.2",
  "description": "Install Claude Code CLI with GitHub Actions cache support",
  "author": "Minsu Lee",
  "license": "MIT",
  "keywords": [
    "github-actions",
    "claude-code",
    "cli",
    "setup"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": "24"
  },
  "scripts": {
    "build": "ncc build src/main.ts -o dist",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/cache": "^4.1.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.14.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.0.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.15.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
